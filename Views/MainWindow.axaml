<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:IPFuscatorUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="IPFuscatorUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="IPFuscatorUI">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>


    <Grid RowDefinitions="Auto, *, Auto" ColumnDefinitions="3*, 1*">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock 
            Grid.Row="0" Grid.ColumnSpan="3" 
            Text="{Binding Greeting}" HorizontalAlignment="Center" 
            VerticalAlignment="Center" Margin="5" 
            FontSize="28">
        </TextBlock>

    
        <TextBox 
            Grid.Row="1" Grid.ColumnSpan="3" 
            Text="{Binding IpItemContent}" Watermark="Enter ip address..." 
            Margin="5" FontSize="22">

            <TextBox.KeyBindings>
                <KeyBinding Gesture="Enter" Command="{Binding ObfuscateCommand, UpdateSourceTrigger=PropertyChanged}" />
            </TextBox.KeyBindings>
        </TextBox>     

        <TextBox 
            Grid.Row="2" Grid.Column="0" 
            Text="{Binding ObfuscatedIpItemContent}" Watermark="Obfuscated result..." 
            IsReadOnly="True" Margin="5" FontSize="22" />
        <ComboBox 
            Grid.Row="2" Grid.Column="1" 
            ItemsSource="{Binding ObfuscationTypesItems}" SelectedItem="{Binding SelectedObfuscationType, Mode=TwoWay}" 
            SelectedIndex="0" MaxDropDownHeight="200" 
            Margin="5" FontSize="22" 
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch">
        </ComboBox>
    </Grid>

    

</Window>
